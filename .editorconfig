# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{htmlhintrc,jscsrc,jshintrc}]
indent_size = 2

[*.{js,jsx}]
indent_size = 2

[*.{css,less}]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
root = true

[*]
insert_final_newline = false
